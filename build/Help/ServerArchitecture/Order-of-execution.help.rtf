\f2\fs18 \cf0 	~fx = \cf3 Synth\cf0 .tail(s, \cf4 "fx"\cf0 );\
	~src = \cf3 Synth\cf0 .tail(s, \cf4 "src"\cf0 );  \cf5 // effect will not be heard b/c it's earlier\cf0 \
	~src.moveBefore(~fx);   \cf5 // place the source before the effect\cf0 \
