\
\cf2 // use Median filter for high frequency noise\
\cf3 Synth\cf0 .play(\{ \cf3 Median\cf0 .ar(31, \cf3 WhiteNoise\cf0 .ar(0.1) + \cf3 SinOsc\cf0 .ar(800,0,0.1)) \});\
\
