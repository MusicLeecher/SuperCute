#! /bin/sh
# This takes the build products and makes a distribution folder.  This also creates an Extensions folder in Application Support.
mkdir ../SuperCollider_f
cd build
cp -r SuperCollider.app ../../SuperCollider_f
cp scsynth ../../SuperCollider_f
mkdir ~/Library/Application\ Support/SuperCollider/Extensions
cd ..
svn export --force build ../SuperCollider_f
